<div class="container mt-5">
  <h3 class="mb-4">Search Results for "{{query}}"</h3>
  
  {{#if products.length}}
    <div class="row">
      {{#each products}}
        <div class="col-md-3 col-sm-6 mb-4 d-flex justify-content-center">
          <div class="card h-100 shadow-sm">
            <!-- Product Image -->
            <img src="{{image}}" class="card-img-top" alt="{{name}}" style="height: 200px; object-fit: cover;">
            
            <div class="card-body d-flex flex-column">
              <!-- Product Title -->
              <h5 class="card-title">{{name}}</h5>
              
              <!-- Product Category -->
              <h6 class="card-subtitle mb-2 text-muted">{{category}}</h6>
              
              <!-- Product Description (shortened) -->
              <p class="card-text text-truncate" style="font-size: 0.9rem;">{{description}}</p>
              
              <!-- Product Price -->
              <p class="card-text fw-bold">â‚¹{{price}}</p>
              
              <!-- Add to Cart Form -->
              <form action="/add-to-cart" method="POST" class="mt-auto">
                <input type="hidden" name="productId" value="{{this._id}}" />
                <button type="submit" class="btn btn-success w-100">Add to Cart</button>
              </form>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <!-- If no products found -->
    <div class="col-12 text-center">
      <p class="text-muted">No products found matching your search.</p>
    </div>
  {{/if}}
</div>
